server {
    server_name {{ ALLOWED_HOSTS }};
    listen 443 ssl;

    access_log  /var/log/www/{{ web_server_name }}/access.log;
    error_log   /var/log/www/{{ web_server_name }}/error.log;

    client_header_buffer_size 64k;
    large_client_header_buffers 4 64k;

    location /node_modules {
        alias /var/www/{{ web_server_name }}/static/node_modules;
    }

    location /static {
        alias /var/www/{{ web_server_name }}/static;
    }

    location /media {
        alias /var/www/{{ web_server_name }}/media;
    }

    location / {
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_pass http://127.0.0.1:{{ service_port }}/;
        proxy_connect_timeout 600s;
        proxy_read_timeout 600s;
        client_max_body_size  10m;
    }


    ssl_certificate /etc/letsencrypt/live/{{ ALLOWED_HOSTS }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ ALLOWED_HOSTS }}/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = {{ ALLOWED_HOSTS }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen      80;
    server_name {{ ALLOWED_HOSTS }};
    return 404; # managed by Certbot
}